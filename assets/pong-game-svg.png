<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <!-- Background -->
  <rect width="400" height="300" fill="#000" />
  
  <!-- Center Line -->
  <line x1="200" y1="0" x2="200" y2="300" stroke="#fff" stroke-width="4" stroke-dasharray="10,10" />
  
  <!-- Left Paddle -->
  <rect x="20" y="100" width="10" height="100" fill="#fff" />
  
  <!-- Right Paddle -->
  <rect x="370" y="100" width="10" height="100" fill="#fff" />
  
  <!-- Ball -->
  <circle cx="200" cy="150" r="10" fill="#fff" />
  
  <!-- Score -->
  <text x="100" y="50" font-family="Arial" font-size="30" fill="#fff">0</text>
  <text x="300" y="50" font-family="Arial" font-size="30" fill="#fff">0</text>
</svg>
